<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="5dp"
    android:padding="8dp"
    android:background="@drawable/backrepeat"
    android:id="@+id/container">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        android:id="@+id/cardview"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/eczane_logo"
                android:id="@+id/eczane_logo"/>


            <TextView
                android:textColor="@color/menuback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eczane_name"
                android:text="Eczane ADI"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:textColor="@color/menuback"
                android:layout_marginTop="12dp"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_below="@+id/eczane_name"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="Adres"
                android:id="@+id/eczane_adress"/>

            <TextView
                android:textColor="@color/menuback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eczane_ara"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/eczane_name"
                android:onClick="onEczaneAra"
                android:text="Ara"
                android:textStyle="bold"
                android:textSize="17sp"/>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</FrameLayout>